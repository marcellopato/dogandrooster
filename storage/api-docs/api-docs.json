{
    "openapi": "3.0.0",
    "info": {
        "title": "Precious Metals E-commerce API",
        "description": "API for precious metals pricing with volatile spot-indexed prices",
        "version": "1.0.0"
    },
    "paths": {
        "/api/checkout": {
            "post": {
                "tags": [
                    "Checkout"
                ],
                "summary": "Process checkout for a price quote",
                "operationId": "cf3dadcde3206331ee7bb6dfb80d50c4",
                "parameters": [
                    {
                        "name": "Idempotency-Key",
                        "in": "header",
                        "description": "Unique key for idempotent requests",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "quote_id"
                                ],
                                "properties": {
                                    "quote_id": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Order created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "order_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "payment_intent_id": {
                                            "type": "string",
                                            "example": "pi_1234567890"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "pending"
                                        },
                                        "total_cents": {
                                            "type": "integer",
                                            "example": 410000
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Business logic conflict",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "enum": [
                                                "REQUOTE_REQUIRED",
                                                "OUT_OF_STOCK"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Idempotency-Key header is required"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/quote": {
            "post": {
                "tags": [
                    "Quotes"
                ],
                "summary": "Generate a price quote for precious metals",
                "operationId": "8433cd4c5a73f6b9be973dda9d518dd0",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "sku",
                                    "qty"
                                ],
                                "properties": {
                                    "sku": {
                                        "type": "string",
                                        "example": "GOLD_1OZ"
                                    },
                                    "qty": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Quote generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "quote_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "unit_price_cents": {
                                            "type": "integer",
                                            "example": 205000
                                        },
                                        "quote_expires_at": {
                                            "type": "string",
                                            "example": "2025-09-03T15:30:00.000000Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "PRODUCT_NOT_FOUND"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Checkout",
            "description": "Checkout"
        },
        {
            "name": "Quotes",
            "description": "Quotes"
        }
    ]
}